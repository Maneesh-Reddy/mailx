{
    "manifest_version": 3,
    "name": "Email Priority Manager",
    "version": "1.0",
    "description": "Prioritize Gmail emails",
    "permissions": [
      "storage",
      "identity",
      "https://www.googleapis.com/*",
      "https://gmail.googleapis.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "oauth2": {
      "client_id": "482498520434-h2jiln2cjg6jhdu2lm991504r7kueotf.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.readonly",
        "https://www.googleapis.com/auth/userinfo.email"
      ]
    }
  }